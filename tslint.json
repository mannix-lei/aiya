{
    "defaultSeverity": "warning",
    "extends": ["tslint:recommended"],
    "linterOptions": {
        "exclude": ["node_modules/**"]
    },
    "rules": {
        "indent": [true, "spaces", 4],
        "interface-name": true,
        "no-consecutive-blank-lines": true,
        "object-literal-sort-keys": false,
        "ordered-imports": true,
        "quotemark": [true, "single"]
    }
}
